        <!-- Table Section -->
        <h1>COLOUR TO B&W HISTORY</h1>
        <table>
            <tr>
                <th>Date Uploaded</th>
                <th>Status</th>
                <th>Original</th>
                <th>Converted</th>
            </tr>
            {% for key in db %}
                </tr>
                    <td>{{ key.date }}</td>
                    <td>{{ key.status }}</td>.
                    <td><a href = {{ key.originalFilename }}>DOWNLOAD</a></td>
                    <td>
                          {% if key.convertedFile != null %}
                                <a href = {{ key.convertedFile }}>DOWNLOAD</a>
                          {% endif %}
                        
                    </td>
                <tr>
            {% endfor %}
        </table>
